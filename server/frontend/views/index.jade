extends layout

block content
	h1= title
	p Welcome to #{title}

	div
		form(action='/update', method='post')
			div(data-role='fieldcontain')
				fieldset(data-role='controlgroup')
					label(for='email') email
						input(id='email',type='text',value='',placeholder='@',name='email')
			div(data-role='fieldcontain')
				fieldset(data-role='controlgroup')
					label(for='phone') phone
						input(id='phone',type='text',value='',placeholder='(***)-***-***',name='phone')
			div(data-role='fieldcontain')
				fieldset(data-role='controlgroup')
					label(for='twitter') twitter
						input(id='twitter',type='text',value='',placeholder='#',name='twitter')
			div(data-role='fieldcontain')
				input(type='submit',value='Submit',data-transition='fade',data-theme='c')
